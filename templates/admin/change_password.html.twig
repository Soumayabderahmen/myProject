{% extends 'base.html.twig' %}
{% block title %}profile
{% endblock %}
{% block content %}
	<div class="page-wrapper">
		<div class="content container-fluid pb-0">
			<h4 class="mb-3"></h4>
			
				
		<div class="onboarding-content-box">
			<div class="onboarding-title profile-title">
				<h2>Changer Votre Mot de Passe
					
				</h2>
			</div>
			<div class="onboarding-content passcode-wrap mail-box">
				<div class="row">
					<div class="col-lg-12">
						<div class="form-group">
							{{ form_start(form) }}
								<div class="container">
							<div class="row">
								<div class="col">
									<div class="col-lg-12">
										<div class="form-group">
											<label class="onboarding-lable">Mot De Passe
											</label>
											{{ form_widget(form.password, {attr:{'class':'form-control'}}) }}
										</div>
									</div>
								</div>


							</div>
						</div>
						<div class="container">
						<div class="row">
								<div class="col">
									<div class="col-lg-12">
										<div class="form-group">
											<label class="onboarding-lable">Confirmer Mot De Passe
											</label>
											{{ form_widget(form.confirm_password, {attr:{'class':'form-control'}}) }}
										</div>
									</div>
								</div>


							</div>
						</div>

							<div class="col-12">
					<div class="doctor-submit text-end">
						<div class="text-right">
							{{ form_row(form.Enregistrer , {attr:{'class':'btn btn-primary save-btn'}}) }}
						</div>

					</div>
				</div>
				               {{ form_end(form) }}
		
				{# </div> #}
			</div>
		</div>
	</div>
{% endblock %}

