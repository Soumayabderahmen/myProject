{% extends 'base.html.twig' %}
{% block title %}specialites
{% endblock %}
{% block content %}
	<div class="page-wrapper">
		<div class="content container-fluid pb-0">
			<h4 class="mb-3">Specialites</h4>
			<div class="row">
				<div class="page-header">
					<div class="row align-items-center">
						<div class="col-md-12 d-flex justify-content-end">
							<div class="text-right">
								<a class="btn btn-primary btn-add" style="width:190px" href="{{ path('app_specialites_new') }}">
									<i class="feather-plus-square me-1"></i>
									Ajouter Specialite
								</a>
							</div>
						</div>
					</div>
				</div>
				<div class="card">
					<table class="table datatable-basic table table-borderless hover-table" id="datatable">
						<div class="card-body">
							<div class="header-elements">
								<thead class="thead-light">
									
									<th colspan="2">
										<center>Nom</center>
									</th>
									<th>Description</th>
									<th colspan="3">
										<center>Actions</center>
									</th>
								</thead>
								<tbody>
									{% for specialite in specialites %}
										<tr>
											
											<td colspan="2">
												<h2 class="table-avatar">
													<a href="#" class="spl-img">
														<img <center> {% for image in specialite.images|slice(0, 1) %} <img src="{{ asset('/uploads/'~image.name) }}" alt="" width="40" height="40" /> {% endfor %} </center>
															<a href="#">
																<span>{{ specialite.nom }}</span>
															</a>
														</h2>
											</td>
													<td>{{ specialite.description|slice(0,20) }}...</td>
													<td></td>
													<td></td>
													<td style="display: inline-flex;margin-left: 150px;">
                                              
												<a href="{{ path('app_specialites_show', {'id': specialite.id}) }}" class="btn btn-sm bg-primary-light">
													<i class="far fa-eye"></i>

												</a>
												&nbsp;
												<a href="{{ path('app_specialites_edit', {'id': specialite.id}) }}" class="btn btn-sm bg-info-light">
													<i class="far fa-edit"></i>

												</a>
												&nbsp;
												{{ include('specialites/_delete_form.html.twig') }}
											
											</td>
										
												</tr>
											{% else %}
												<tr>
													<td colspan="20">no records found</td>
												</tr>
											{% endfor %}
										</tr>
									</tbody>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			{% endblock %}

